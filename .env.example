# Environment Variables Template
# Copy this file to .env and fill in your API keys

# Server Configuration
HPN_ROUTER_SERVER_HOST=0.0.0.0
HPN_ROUTER_SERVER_PORT=8080

# Key Pool Strategy (round-robin, random, weighted, least-used)
HPN_ROUTER_KEY_POOL_STRATEGY=round-robin

# API Keys (format: HPN_ROUTER_API_KEY_<PROVIDER>_<INDEX>)
HPN_ROUTER_API_KEY_OPENAI_0=your-openai-key-here
HPN_ROUTER_API_KEY_OPENAI_1=your-second-openai-key-here
HPN_ROUTER_API_KEY_ANTHROPIC_0=your-anthropic-key-here
HPN_ROUTER_API_KEY_GOOGLE_0=your-google-key-here

# Logging Configuration
HPN_ROUTER_LOGGING_LEVEL=info
HPN_ROUTER_LOGGING_FORMAT=json
